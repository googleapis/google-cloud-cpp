load(":experimental_bigquery_rest_client_benchmark_programs.bzl", "experimental_bigquery_rest_client_benchmark_programs")
load(":experimental_bigquery_rest_client_benchmark_unit_tests.bzl", "experimental_bigquery_rest_client_benchmark_unit_tests")
load(":experimental_bigquery_rest_client_benchmarks.bzl", "experimental_bigquery_rest_client_benchmarks_hdrs", "experimental_bigquery_rest_client_benchmarks_srcs")

package(default_visibility = ["//visibility:private"])

licenses(["notice"])  # Apache 2.0

cc_library(
    name = "experimental_bigquery_rest_client_benchmarks",
    testonly = True,
    srcs = experimental_bigquery_rest_client_benchmarks_srcs,
    hdrs = experimental_bigquery_rest_client_benchmarks_hdrs,
    deps = [
        "//:common",
        "//google/cloud:google_cloud_cpp_mocks",
        "//google/cloud/bigquery:bigquery_rest_testing",
        "//google/cloud/bigquery:google_cloud_cpp_bigquery_rest",
        "//google/cloud/bigquery:google_cloud_cpp_bigquery_rest_mocks",
        "//google/cloud/testing_util:google_cloud_cpp_testing_private",
        "//google/cloud/testing_util:google_cloud_cpp_testing_rest_private",
        "@googletest//:gtest_main",
    ],
)

[cc_test(
    name = test.replace("/", "_").replace(".cc", ""),
    testonly = True,
    srcs = [test],
    deps = [
        ":experimental_bigquery_rest_client_benchmarks",
        "//:common",
        "//google/cloud:google_cloud_cpp_mocks",
        "//google/cloud/bigquery:bigquery_rest_testing",
        "//google/cloud/bigquery:google_cloud_cpp_bigquery_rest",
        "//google/cloud/bigquery:google_cloud_cpp_bigquery_rest_mocks",
        "//google/cloud/testing_util:google_cloud_cpp_testing_private",
        "//google/cloud/testing_util:google_cloud_cpp_testing_rest_private",
        "@googletest//:gtest",
        "@googletest//:gtest_main",
    ],
) for test in experimental_bigquery_rest_client_benchmark_unit_tests]

[cc_binary(
    name = program.replace("/", "_").replace(".cc", ""),
    testonly = True,
    srcs = [program],
    deps = [
        ":experimental_bigquery_rest_client_benchmarks",
        "//:common",
        "//google/cloud/bigquery:bigquery_rest_testing",
        "//google/cloud/bigquery:google_cloud_cpp_bigquery_rest",
        "//google/cloud/testing_util:google_cloud_cpp_testing_private",
        "//google/cloud/testing_util:google_cloud_cpp_testing_rest_private",
    ],
) for program in experimental_bigquery_rest_client_benchmark_programs]
