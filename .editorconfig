# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space

[*.BUILD,*.bzl,*.bazel]
indent_size = 4

[CMakeLists.*]
indent_size = 4

[*.h,*.cc]
indent_size = 2

[*.md]
indent_size = 2

[*.sh]
indent_size        = 2
indent_style       = space
shell_variant      = bash
switch_case_indent = true
